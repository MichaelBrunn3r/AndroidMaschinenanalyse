<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:key="fftAudioSamples"
        android:title="FFT Audio Samples"
        app:useSimpleSummaryProvider="true"
        android:defaultValue="4096"
        android:entries="@array/fftAudioSampleEntries"
        android:entryValues="@array/fftAudioSamples" />

    <EditTextPreference
        android:key="recordingDuration"
        app:title="Recording Duration (Seconds)"
        app:summary="Length of recordings"
        android:defaultValue="10000" />

    <EditTextPreference
        android:key="compTimeWindow"
        app:title="Length Realtime Mean (Seconds)"
        app:summary="Length of the time to calculate realtime mean that is compared to the selected recording"
        android:defaultValue="5" />

</PreferenceScreen>