<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.github.michaelbrunn3r.maschinenanalyse.MainFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_mainFragment_to_recordingFragment"
            app:destination="@id/recordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/settings_in_bottom" />
        <action
            android:id="@+id/action_mainFragment_to_monitorFragment"
            app:destination="@id/monitorFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_mainFragment_to_recordingsListFragment"
            app:destination="@id/recordingsListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/recordFragment"
        android:name="com.github.michaelbrunn3r.maschinenanalyse.RecordFragment"
        android:label="@string/title_record_fragment">
        <action
            android:id="@+id/action_recordingFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/settings_in_bottom" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.github.michaelbrunn3r.maschinenanalyse.SettingsFragment"
        android:label="@string/title_settings_fragment" />
    <fragment
        android:id="@+id/monitorFragment"
        android:name="com.github.michaelbrunn3r.maschinenanalyse.MonitorFragment"
        android:label="@string/title_monitor_fragment">
        <action
            android:id="@+id/action_monitorFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/settings_in_bottom" />
    </fragment>
    <fragment
        android:id="@+id/recordingsListFragment"
        android:name="com.github.michaelbrunn3r.maschinenanalyse.RecordingsListFragment"
        android:label="@string/title_recording_list_fragment" >
        <action
            android:id="@+id/action_recordingsListFragment_to_recordingDetailsFragment"
            app:destination="@id/recordingDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/recordingDetailsFragment"
        android:name="com.github.michaelbrunn3r.maschinenanalyse.RecordingDetailsFragment"
        android:label=" " >
        <argument
            android:name="recording_id"
            app:argType="integer" />
    </fragment>
</navigation>