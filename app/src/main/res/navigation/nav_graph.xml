<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.github.michaelbrunn3r.maschinenanalyse.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_recordingFragment"
            app:destination="@id/recordingFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_monitorFragment"
            app:destination="@id/monitorFragment" />
    </fragment>
    <fragment
        android:id="@+id/recordingFragment"
        android:name="com.github.michaelbrunn3r.maschinenanalyse.RecordingFragment"
        android:label="RecordingFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.github.michaelbrunn3r.maschinenanalyse.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/monitorFragment"
        android:name="com.github.michaelbrunn3r.maschinenanalyse.MonitorFragment"
        android:label="MonitorFragment" />
</navigation>