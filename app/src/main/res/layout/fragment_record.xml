<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.github.michaelbrunn3r.maschinenanalyse.viewmodels.RecordViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layoutMargin"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding"
            android:paddingEnd="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mean Acceleration: " />

            <TextView
                android:id="@+id/meanAccel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.recordedAccelMean.toString()}"
                tools:text="@sample/recordings.json/recordings/meanAcceleration" />
        </LinearLayout>

        <com.github.michaelbrunn3r.maschinenanalyse.ui.SpectrogramView
            android:id="@+id/spectrogram"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layoutMargin"
            app:bgColor="@color/mine_shaft"
            app:drawGridLines="xAxis|yAxis"
            app:enableDragging="yAxis|xAxis"
            app:enableScaling="yAxis|xAxis"
            app:graphColor="?attr/colorAccent"
            app:graphWidth="0.8dp"
            app:showLegend="false"
            app:viewPortOffsetBottom="10"
            app:viewPortOffsetLeft="80"
            app:viewPortOffsetRight="50"
            app:viewPortOffsetTop="50" />

    </LinearLayout>
</layout>