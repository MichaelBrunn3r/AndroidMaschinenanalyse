<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.github.michaelbrunn3r.maschinenanalyse.viewmodels.RecordViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.michaelbrunn3r.maschinenanalyse.views.SpectrogramView
            android:id="@+id/accel_spectrogram"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_half"
            app:bgColor="@color/mine_shaft"
            app:drawGridLines="xAxis|yAxis"
            app:enableDragging="yAxis|xAxis"
            app:enableScaling="yAxis|xAxis"
            app:graphColor="?attr/colorAccent"
            app:graphWidth="0.8dp"
            app:layout_constraintBottom_toTopOf="@+id/audio_spectrogram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showLegend="false"
            app:viewPortOffsetBottom="10"
            app:viewPortOffsetLeft="80"
            app:viewPortOffsetRight="50"
            app:viewPortOffsetTop="50" />

        <com.github.michaelbrunn3r.maschinenanalyse.views.SpectrogramView
            android:id="@+id/audio_spectrogram"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:bgColor="@color/mine_shaft"
            app:drawGridLines="xAxis|yAxis"
            app:enableDragging="yAxis|xAxis"
            app:enableScaling="yAxis|xAxis"
            app:graphColor="?attr/colorAccent"
            app:graphWidth="0.8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accel_spectrogram"
            app:showLegend="false"
            app:viewPortOffsetBottom="10"
            app:viewPortOffsetLeft="80"
            app:viewPortOffsetRight="50"
            app:viewPortOffsetTop="50" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>