<resources>

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.AppCompat.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/limed_spruce</item>
        <item name="colorPrimaryDark">@color/limed_spruce_dark</item> <!-- also used by status bar-->
        <item name="colorAccent">@color/sunshade</item>

        <item name="android:colorBackground">@color/mine_shaft</item>
        <item name="android:colorButtonNormal">@color/mine_shaft</item>

        <item name="android:textColorPrimary">@color/white</item> <!--Text color on primary -->
        <item name="android:textColor">@color/boulder</item> <!-- Standard text color -->

        <!-- Widgets -->
        <item name="buttonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.AppCompat.Button.Borderless"/>
</resources>
